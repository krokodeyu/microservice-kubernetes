FROM maven:3.9.6-eclipse-temurin-11 AS build
WORKDIR /workspace
COPY . .

RUN (mvn -B -q -DskipTests -f microservice-kubernetes-demo/pom.xml -pl microservice-kubernetes-demo-catalog -am package) \
 || (mvn -B -q -DskipTests -f pom.xml -pl microservice-kubernetes-demo-catalog -am package)

RUN (cp microservice-kubernetes-demo/microservice-kubernetes-demo-catalog/target/*.jar /workspace/app.jar) \
 || (cp microservice-kubernetes-demo-catalog/target/*.jar /workspace/app.jar)

FROM eclipse-temurin:11-jre
WORKDIR /app
COPY --from=build /workspace/app.jar /app/app.jar
EXPOSE 8080
CMD ["java","-Xms256m","-Xmx512m","-jar","/app/app.jar"]
